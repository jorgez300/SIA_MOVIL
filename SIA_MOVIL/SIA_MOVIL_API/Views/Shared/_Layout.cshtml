<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>

<body>

    <style>
        .modal_load {
            display: none;
            position: fixed;
            z-index: 10000000000000000;
            top: 0;
            left: 0;
            height: 100%;
            width: 100%;
            background: rgba( 255, 255, 255, .8 );
        }

        #Loaddiv {
            position: fixed;
            top: 50%;
            left: 50%;
            width: 5em;
            height: 5em;
            margin-top: -2.5em; /*set to a negative number 1/2 of your height*/
            margin-left: -2.5em; /*set to a negative number 1/2 of your width*/
        }

        .modal_load_visible {
            display: block !important;
        }

    </style>

    <div class="modal_load">
        <div id="Loaddiv" class="spinner-grow text-success"></div>
    </div>

    <div class="container-fluid">
        @RenderBody()
    </div>

    @RenderSection("scripts", required: false)
</body>
</html>
